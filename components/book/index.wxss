.container{
  margin-top:30rpx;
  display: flex;
  position: relative; 
  box-shadow:2px 2px 3px #e3e3e3;
  flex-direction: column;
  width:240rpx;
  height:360rpx;

    padding-bottom: 20rpx;
}
.container image{
    width:100%;
    height:100%;
    border-radius: 2px;
}
.description{
    padding:5rpx 10rpx 8rpx 15rpx;  
    background-color: #ffffff;
    width:216rpx;
    /* height:100rpx; */
    position:absolute;  
    bottom: 0;
    font-size:24rpx;
    display: flex; 
    flex-direction: column;
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 2px;
}
.title{
    font-size: 26rpx;
    padding-top: 10rpx;
    padding-left: 10rpx;

}
.author{
    font-size: 20rpx;
    padding-top: 10rpx;
